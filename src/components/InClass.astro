---
import { Badge } from '@astrojs/starlight/components';

interface Props {
    term: string,
    done: boolean,
    plan?: "homework" | "in-class"
}

const {term, plan, done = false}:Props = Astro.props;
const variant = done ? "success" : "caution";
const doneAs = plan === 'homework' ? 'Homework' : plan === 'in-class' ? 'In-Class Demo' : '';
const text = `${term} term`;
---

